        String breadType=input.nextLine();
        
        System.out.println("what does that motherfucking sign say????");
        int signPrice=input.nextInt();
        
        Sandwich Tuna = new Sandwich(filler, breadType, signPrice); //instances
        //Sandwich Cheese = new Sandwich("Cheese, lettuce", "Rye", 2.39);
        
